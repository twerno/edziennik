<table>
	<tr>
		<td>restore</td>
		<td>Class name</td>
		<td>Id</td>
		<td>User</td>
		<td>User ip</td>
		<td>User browser</td>
		<td>updated</td>
		<td>Akcja</td>
		<td>zmiany</td>
	</tr>
	<% for archive in @archives %>
		<tr>
			<td><%= link_to :Restore, archives_restore_path ({:class_id => archive[:class].id, :class_name => (archive [:class]).class.name, :id => (archive[:id]) }), :confirm => 'Na pewno chcesz przywr�ci� ten rekord?' %>
			<td><%= link_to (archive [:class]).class.name, archives_show_path ({:class_name => (archive [:class]).class.name }) %></td>
			<td><%= link_to (archive [:class]).id, archives_show_path ({:class_name => (archive [:class]).class.name, :class_id => (archive [:class]).id}) %></td>
			<td><%= link_to (archive[:edited_by]), archives_show_path({:edited_by => archive[:edited_by]}) %></td>
			<td><%= link_to archive [:editors_ip], archives_show_path({:editors_ip => archive [:editors_ip] })%></td>
			<td><%= link_to archive [:editors_browser].to_s[0..10], archives_show_path({:editors_browser => archive [:editors_browser]}) %></td>
			<td><%= (archive [:class]).updated_at %></td>
			<td><%= link_to archive [:method], archives_show_path ({:method => archive [:method]}) %></td>
			<td>
				<% for change in archive[:changes] %>
					<%= change %> => "<%= archive[:class][change] %>", 
				<% end %>
			</td>								
		</tr>
	<% end %>
</table>