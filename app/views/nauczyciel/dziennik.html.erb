Przedmiot : <%= @przedmiot.nazwa.to_s %>, dnia: <%= @date.to_s %><br />


<table border =1>
<tr>
	<td></td>
	<td>Uczniowie</td>
	<td>Ob.</td>
	<td>nie ob.</td>
	<td>sp.</td>
	<% for rubryka in @rubryki %>
	<td><%= rubryka.opis %></td>
	<% end %>
</tr>
<% uczen_i = 1 %>
<% for uczen in Uczniowie( @uczniowie) %>
<tr>
<td><%= uczen_i %></td>	
<td><%= uczen.nazwisko.to_s+" "+uczen.imie.to_s %></td>
<td class="obecnosc" <%= onclick_to_remote :url => {:action => :sprawdzam_obecnosc, :lekcja => @lekcja.id, :uczen => uczen.id, :date =>@date.to_s, :wartosc => 1, :lista => @lista, :format => :js } %>><div class="obecny"    id="<%= uczen.id %>-1" <%= obecny    uczen, @lekcja %>> &nbsp;</div></td>
<td class="obecnosc" <%= onclick_to_remote :url => {:action => :sprawdzam_obecnosc, :lekcja => @lekcja.id, :uczen => uczen.id, :date =>@date.to_s, :wartosc => 2, :lista => @lista, :format => :js } %>><div class="nieobecny" id="<%= uczen.id %>-2" <%= nieobecny uczen, @lekcja %>>&nbsp;</div></td>
<td class="obecnosc" <%= onclick_to_remote :url => {:action => :sprawdzam_obecnosc, :lekcja => @lekcja.id, :uczen => uczen.id, :date =>@date.to_s, :wartosc => 3, :lista => @lista, :format => :js } %>><div class="spozniony" id="<%= uczen.id %>-3" <%= spozniony uczen, @lekcja %>>&nbsp;</div></td>
<% for rubryka in @rubryki%>
	<td><%= rubryka.oceny.find_by_uczen_id uczen %></td>
<% end %>

</tr>
<% uczen_i += 1%>
<% end %>
</table>