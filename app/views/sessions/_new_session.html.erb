<% form_tag session_path do %>
<div style="font-size:12px">
<%= label_tag 'login', 'Username' %> <%= text_field_tag 'login', @login %>
<%= label_tag 'password' %><%= password_field_tag 'password', nil %><br />

<%= label_tag 'remember_me', 'Remember me' %><%= check_box_tag 'remember_me', '1', @remember_me %><br />

	<div class="buttons">
		<%= submit_tag 'Login' %>
	</div>
<% end -%>
</div>