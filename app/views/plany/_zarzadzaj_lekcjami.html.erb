<% form_remote_for :Lekcja, :url => {:action => :create_lekcja}, :html => { :id => 'review_form' } do |f| %>
	<%= f.select "lista_id", Lista.existing.find_all_by_grupa_id(@grupa.id).collect{|c| [c.przedmiot.nazwa, c.id]}+[["============"], ["Godzina wolna", -1]] %>
	<%= f.hidden_field :plan_id, :value => @plan.id %>
	<%= f.hidden_field :dzien_tygodnia, :value => 1 %>
	<%= f.hidden_field :grupa_id, :value => @grupa.id %>
	<%= f.hidden_field :existing, :value => "=" %>
	<%= f.hidden_field :godzina_id, :value => "=" %>
	<%= f.submit 'create' %>
<% end %>