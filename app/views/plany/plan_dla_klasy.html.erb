<%= link_to 'Plan', "/plany/"+@plan.id.to_s+"/plan" %> | 
<% for klasa in Grupa.existing.klasa %>
	<%= link_to klasa.nazwa, "/plany/"+@plan.id.to_s+"/plan/"+klasa.id.to_s %> | 
<% end %>

<table border = 1>
	<tr>
		<td><%=h @grupa.nazwa %></td>
		<td>Poniedziałek</td>
		<td>Wtorek</td>
		<td>Środa</td>
		<td>Czwartek</td>
		<td>Piątek</td>
		<td>Sobota</td>
		<td>Niedziela</td>
	</tr>
	<% for godzina in @godziny %>
	<tr>
		<td><%=h godzina.begin.strftime("%H") << ":" << godzina.begin.strftime("%M") %>-<%=h godzina.end.strftime("%H") << ":" << godzina.end.strftime("%M") %></td>
			<% for i in 1..7 %>
				<td><div id="<%= godzina.id %>-<%= i %>" <%= onclick_to_remote :url => {:action => :wybierz_kom, :id => @plan.id, :klasa => @grupa.id, :dzien => i, :godzina => godzina.id } %>><%= nazwa_przedmiotu @plan.id, i, godzina.id, @grupa.id %></div></td>
			<% end %>
	</tr>
	<% end %>
</table>

<div id="lekcje">
	<%= render :partial => 'zarzadzaj_lekcjami' %>
</div>